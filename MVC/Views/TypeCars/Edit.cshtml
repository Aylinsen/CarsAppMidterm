@model CarModel

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
    var dateTimePickerClass = "datetimepicker";
}
@{
    ViewData["Title"] = "Edit TypeCar";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <div class="@containerDivClass">
        @if (TempData["Message"] is not null)
        {
            <p class="text-danger">
                @TempData["Message"]
            </p>
        }
        <form asp-action="Edit" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for the ID -->
            <input type="hidden" asp-for="record.Id" />

            <!-- Brand -->
            <div class="row mb-3">
                <label asp-for="record.Brand" class="col-2 col-form-label fw-bold"></label>
                <div class="col-10">
                    <input asp-for="record.Brand" class="form-control" />
                    <span asp-validation-for="record.Brand" class="text-danger"></span>
                </div>
            </div>

            <!-- Is Damaged -->
            <div class="row mb-3">
                <label asp-for="record.IsDamaged" class="col-2 col-form-label fw-bold"></label>
                <div class="col-10">
                    <select asp-for="record.IsDamaged" class="form-select">
                        <option value="true">Damaged</option>
                        <option value="false">Solid</option>
                    </select>
                    <span asp-validation-for="record.IsDamaged" class="text-danger"></span>
                </div>
            </div>

            <!-- Model Year -->
            <div class="row mb-3">
                <label asp-for="record.modelYear" class="col-2 col-form-label fw-bold"></label>
                <div class="col-10">
                    <input asp-for="record.modelYear" class="form-control @dateTimePickerClass" />
                    <span asp-validation-for="record.modelYear" class="text-danger"></span>
                </div>
            </div>

            

            <!-- Car Type -->
            <div class="row mb-3">
                <label asp-for="record.CarTypeId" class="col-2 col-form-label fw-bold"></label>
                <div class="col-10">
                    <pre>@ViewData["CarTypeId"]</pre>

                    <span asp-validation-for="record.CarTypeId" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="row mb-3">
                <div class="offset-2 col-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
                    &nbsp;&nbsp;
                    <a asp-action="Delete" asp-route-id="@Model.record.Id" class="btn btn-danger">Delete</a>
                    &nbsp;&nbsp;
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
}
else
{
    <div class="@containerDivClass">
        <h3 class="text-danger">The record could not be found.</h3>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
}
